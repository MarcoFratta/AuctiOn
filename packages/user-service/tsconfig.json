{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node16",
    // or "nodenext"
    "incremental": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "types": ["@types/jest"]
  },
  "include": ["./src/**/*", "./__tests__/**/*", "./docs/**/*"],
  "exclude": ["node_modules", "dist"]
}
