{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "types": ["@types/jest"],
    "paths": {
      "@auction/common": ["../../common/src/index.ts"],
      "@auction/common/*": ["../../common/src/*"]
    }
  },
  "include": ["./src/**/*", "./__tests__/**/*", "./docs/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../common"
    }
  ]
}
